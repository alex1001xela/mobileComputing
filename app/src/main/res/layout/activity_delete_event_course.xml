<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.wua.mc.webuntisapp.view.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewEventMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="16sp"
                android:text="Course information"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/colorBlue"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:layout_weight="1"
                android:background="@color/blue"
                android:onClick="clickColorBlue" />

            <Button
                android:id="@+id/colorPurple"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:background="@color/purple"
                android:onClick="clickColorPurple" />

            <Button
                android:id="@+id/colorPink"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:background="@color/pink"
                android:onClick="clickColorPink" />

            <Button
                android:id="@+id/colorOrange"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="clickColorOrange" />

            <Button
                android:id="@+id/colorRed"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:background="@color/red"
                android:onClick="clickColorRed" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/colorYellow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:layout_weight="1"
                android:background="@color/yellow"
                android:onClick="clickColorYellow" />

            <Button
                android:id="@+id/colorLightgreen"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:background="@color/lightgreen"
                android:onClick="clickColorLightgreen" />

            <Button
                android:id="@+id/colorGreen"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:background="@color/green"
                android:onClick="clickColorGreen" />

            <Button
                android:id="@+id/colorAqua"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:background="@color/aqua"
                android:onClick="clickColorAqua" />

            <Button
                android:id="@+id/colorOcean"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:background="@color/ocean"
                android:onClick="clickColorOcean" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonDeleteEvent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="60dp"
                android:layout_marginStart="60dp"
                android:layout_weight="1"
                android:text="delete event" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonDeleteCourse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="60dp"
                android:layout_marginStart="60dp"
                android:layout_weight="1"
                android:text="delete course" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
