<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/fieldOfStudyText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/semesterSpinner"
        android:layout_alignStart="@+id/fieldOfStudySpinner"
        android:layout_marginBottom="43dp"
        android:text="Please choose your Field of Study:"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/fieldOfStudySpinner"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/semesterSpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"/>

    <Spinner
        android:id="@+id/semesterSpinner"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/semesterText"
        android:layout_alignStart="@+id/semesterText"
        android:layout_marginTop="28dp" />

    <TextView
        android:id="@+id/semesterText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/fieldOfStudySpinner"
        android:layout_marginBottom="262dp"
        android:text="Please choose your Semester:"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/hsLogo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        app:srcCompat="@drawable/uni_logo" />


</RelativeLayout>